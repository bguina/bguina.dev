ul#info.list-unstyled
  li
    h6(title=__('period_title'))
      span.material-icons-two-tone check
      =' ' + __('period')
  li
    h6(title=__('sites_title'))
      span.material-icons-two-tone location_city
      =' ' + __('sites')
  li
    h6(title=__('email_title'))
      span.material-icons-two-tone mail_outline
      a.text-body.text-decoration-none(href="mailto:"+__('email'))=' ' + __('email')
  li
    ul.list-unstyled
      each link in __('links')
        li
          h6
            a.text-body.text-decoration-none(href=link.url title=link.title)
              img.inline-icon(src="/cv/" + link.icon)
              =' ' + link.label + ' '
              span.material-icons-two-tone link
  li.d-none.d-print-block
    h6
      span.material-icons-two-tone link
      =' https://' + __('domain')
