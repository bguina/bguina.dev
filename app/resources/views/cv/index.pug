extends ../layout

block head
  link(rel='stylesheet' href='/cv/cv.css')

block content
  include navbar.pug

  .cv
    .row
      .col-3.text-end
        img#photo.d-none.d-print-none.d-sm-inline.align-self-center(src="cv/profile-bguina.png")

      #header.col-12.col-print-6.col-sm-6
        h1=__('name')
        h2=__('title')
        h5=__('subtitle')
        if __('availability') === ""
          h4.p-2.text-warning.bg-dark
            =__('unavailable')

      .col-12.col-print-3.col-md-3.align-middle
        include info.pug

    if __('description')[0]
      section#description.row.d-print-none
        .content.p-2
            each paragraph in __('description')
              p=paragraph

    .row
      .col-12.col-print-12.col-lg-3
        include skills.pug

      .col-12.col-print-12.col-lg-9
        include experience.pug
        include education.pug
